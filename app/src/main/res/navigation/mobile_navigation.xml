<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_active">

    <fragment
        android:id="@+id/navigation_active"
        android:name="com.elmansoft.elmancall.ui.active.ActiveFragment"
        android:label="활성화"
        tools:layout="@layout/fragment_active" />

    <fragment
        android:id="@+id/navigation_contact"
        android:name="com.elmansoft.elmancall.ui.contact.ContactFragment"
        android:label="연락처"
        tools:layout="@layout/fragment_contact" />

    <fragment
        android:id="@+id/navigation_change"
        android:name="com.elmansoft.elmancall.ui.change.ChangeFragment"
        android:label="착신전환"
        tools:layout="@layout/fragment_change" />

    <fragment
        android:id="@+id/navigation_list"
        android:name="com.elmansoft.elmancall.ui.list.ListFragment"
        android:label="통화목록"
        tools:layout="@layout/fragment_list" />
</navigation>